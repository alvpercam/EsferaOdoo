<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_slide_channel_tag_group_form_inherit" model="ir.ui.view">
        <field name="name">slide.channel.tag.group.view.form.inherit</field>
        <field name="model">slide.channel.tag.group</field>
        <field name="inherit_id" ref="website_slides.slide_channel_tag_group_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='is_published']" position="after">
                <div>
                    <label for="website_id" string="Selecciona sitio web:"/>
                    <field name="website_id"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>